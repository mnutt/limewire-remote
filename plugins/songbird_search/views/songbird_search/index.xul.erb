<% plugin_javascript_include "jquery.get_params.js", "comet-setup", "search", "downloads", "soundmanager2-setup" -%>

  <popupset>
    <popup id="resultpopup" position="after_start">
      <menuitem label="Download" oncommand="triggerDownload(this);" />
      <menuitem label="Download as.." />
      <menuitem label="Mark as spam" />
      <menuitem label="View file info" />
    </popup>
  </popupset>


  <tree id="results" flex="8" enableColumnDrag="true">
    <treecols>
      <treecol id="space-label" label=" " flex="4" />
      <splitter class="tree-splitter" />
      <treecol id="name-label" label="Title" sort="Name" flex="80" />
      <splitter class="tree-splitter" />
      <treecol id="from-label" label="From" sort="From" flex="8" />
      <splitter class="tree-splitter" />
      <treecol id="extension-label" label="Extension" sort="?extension" flex="1" />
      <splitter class="tree-splitter" />
      <treecol id="size-label" label="Size" sort="Size" flex="8" />
    </treecols>
    
    <treechildren contextmenu="resultpopup">
    </treechildren>
  </tree>

  <splitter
    id="identifier"
    state="open"
    collapse="after"
    resizebefore="closest"
    resizeafter="closest">
    <grippy />
  </splitter>

  <tree id="downloads" flex="3" enableColumnDrag="true" >
    <treecols>
      <treecol id="space-label" label="â–¸" />
      <splitter class="tree-splitter" />
      <treecol id="title-label" label="Title" sort="Title" flex="20" />
      <splitter class="tree-splitter" />
      <treecol id="artist-label" label="Artist" sort="Artist" flex="10" />
      <splitter class="tree-splitter" />
      <treecol id="album-label" label="Album" sort="Album" flex="8" />
      <splitter class="tree-splitter" />
      <treecol id="time-label" label="Time" sort="Time" flex="1" />
      <splitter class="tree-splitter" />
      <treecol id="done-label" label="Done" sort="Done" hidden="true" flex="2" type="progressmeter" />
      <splitter class="tree-splitter" />
      <treecol id="speed-label" label="Status" sort="Status" flex="4" />
      <splitter class="tree-splitter" />
      <treecol id="eta-label" label="ETA" sort="ETA" flex="2" /> 
      <splitter class="tree-splitter" />   
      <treecol id="size-label" label="Size" hidden="true" sort="Size" flex="2" />
    </treecols>

    <treechildren>
    </treechildren>
  </tree>
